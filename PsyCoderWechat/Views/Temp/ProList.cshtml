@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta charset="utf-8">
    <title>我的封面型音乐播放器</title>
    <link rel="stylesheet" href="/Resource/jplayer/css/reset.css">
    <link rel="stylesheet" href="/Resource/jplayer/css/style.css" media="screen" type="text/css">
</head>

<body>


    <div class="music-player">

        <div class="zj"></div>

        <div class="info" style="height:50px;">
            <div class="center">
                <div class="jp-playlist">
                    <ul style="display: block;"></ul>
                </div>
            </div>
            <div class="playerprogress jp-seek-bar" style="width: 100%;"> <span class="jp-play-bar" style="width: 5.03585%;"></span> </div>
        </div>

        <div class="controls">
            <br>
            <div class="play-controls">
                <a href="javascript:;" class="icon-previous jp-previous" title="previous"></a>
                <a href="javascript:;" class="icon-play jp-play" title="play" style="display: none;"></a>
                <a href="javascript:;" class="icon-pause jp-pause" title="pause" style="display: inline-block;"></a>
                <a href="javascript:;" class="icon-next jp-next" title="next"></a>
            </div>

        </div>

        <div id="jquery_jplayer" class="jp-jplayer">
            <audio id="jp_audio_0" preload="metadata"></audio>
        </div>
    </div>


    <div class="playeralbum">
       
            <img src="/dist/img/user2-160x160.jpg" />
        <div class="title">
            <h3>小江的时间缝隙</h3>
            <p>3.3万人订阅</p>
            
        </div>
        <button class="btn btn-danger" style="float:right;">喜欢</button>
    </div>



    <script src="/Resource/jplayer/js/jquery-1.js"></script>
    <script src="/Resource/jplayer/js/jquery.js"></script>
    <script src="/Resource/jplayer/js/jquery_002.js"></script>
    <script src="/Resource/jplayer/js/jplayer.js"></script>
    <script src="/Resource/jplayer/js/index.js"></script>


</body>
</html>