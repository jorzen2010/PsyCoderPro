@model StaticPagedList<PsyCoderEntity.IntegralDetail>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "积分明细记录";
}

@section Topcss {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>
            @ViewBag.SmallTitle
        </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> 首页</a></li>
        <li><a href="#">@ViewBag.Title</a></li>
        <li class="active">@ViewBag.SmallTitle</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="pull-left">
                        <div class="btn-group">
                            <a href="@Url.Action("Index", "Integral")"  class="btn btn-info"><i class="fa fa-list"></i> 查看积分类别</a>
                            <a href="@Url.Action("List", "Integral")" class="btn btn-info"><i class="fa fa-list"></i> 查看积分明细</a>
                        </div>
                    </div>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-1">
                                    序号
                                </th>
                                <th class="col-sm-2">
                                    用户名称
                                </th>
                                <th class="col-sm-2">
                                    积分来源
                                </th>
                                <th class="col-sm-2">
                                    分数
                                </th>
                                <th class="col-sm-4">时间</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IntegralDetailId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IntegralCustomerUserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IntegralSource)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IntegralAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IntegralDetailTime)
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pull-right">
                        @Html.PagedListPager((IPagedList)Model, page => Url.Action("List", new { page = page }),
    new PagedListRenderOptions
    {
        LinkToPreviousPageFormat = "上一页",
        LinkToNextPageFormat = "下一页",
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        MaximumPageNumbersToDisplay = 5,
        LinkToFirstPageFormat = "首页",
        LinkToLastPageFormat = "最后一页",
        PageCountAndCurrentLocationFormat = "第 {0}页 共 {1}页"
    })
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


